{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020"],
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "./dist",
    "rootDir": "./",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": [
    "server.ts",
    "routes/**/*.ts",
    "middleware/**/*.ts",
    "lib/**/*.ts",
    "types/**/*.ts",
    "prisma/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "lib/dbVersion.ts",
    "lib/utils/auth.ts",
    "../middleware.ts",
    "../next.config.ts"
  ]
}

